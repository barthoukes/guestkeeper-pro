<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

   <!-- Night theme variant -->
   <style name="Theme.GuestKeeperPro.Night" parent="Theme.GuestKeeperPro">
      <!-- Override colors for dark mode -->
      <item name="colorPrimary">@color/primary_200</item>
      <item name="colorPrimaryVariant">@color/primary_400</item>
      <item name="colorOnPrimary">@color/black</item>

      <item name="colorSecondary">@color/secondary_200</item>
      <item name="colorSecondaryVariant">@color/secondary_400</item>
      <item name="colorOnSecondary">@color/black</item>

      <item name="colorSurface">@color/surface_dark</item>
      <item name="colorOnSurface">@color/on_surface_dark</item>
      <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
      <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>

      <item name="android:colorBackground">@color/background_dark</item>
      <item name="colorOnBackground">@color/on_background_dark</item>

      <!-- Adjust elevation for dark mode -->
      <item name="elevationOverlayEnabled">true</item>
      <item name="elevationOverlayColor">@color/surface_dark</item>

      <!-- Status bar -->
      <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
   </style>

   <!-- Theme without ActionBar for activities that use toolbar -->
   <style name="Theme.GuestKeeperPro.NoActionBar" parent="Theme.GuestKeeperPro">
      <item name="windowActionBar">false</item>
      <item name="windowNoTitle">true</item>
   </style>

   <!-- Theme for full screen activities (camera, splash) -->
   <style name="Theme.GuestKeeperPro.Fullscreen" parent="Theme.GuestKeeperPro.NoActionBar">
      <item name="android:windowFullscreen">true</item>
      <item name="android:windowContentOverlay">@null</item>
      <item name="android:windowActionBarOverlay">true</item>
   </style>

   <!-- Theme for translucent activities -->
   <style name="Theme.GuestKeeperPro.Translucent" parent="Theme.GuestKeeperPro">
      <item name="android:windowIsTranslucent">true</item>
      <item name="android:windowBackground">@android:color/transparent</item>
      <item name="android:windowContentOverlay">@null</item>
      <item name="android:windowNoTitle">true</item>
      <item name="android:backgroundDimEnabled">true</item>
   </style>

   <!-- Theme for dialogs -->
   <style name="Theme.GuestKeeperPro.Dialog" parent="ThemeOverlay.Material3.Dialog">
      <item name="android:windowBackground">@drawable/dialog_background</item>
      <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
      <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
      <item name="android:windowIsFloating">true</item>
      <item name="android:backgroundDimEnabled">true</item>
   </style>

   <!-- Theme for alert dialogs -->
   <style name="Theme.GuestKeeperPro.Dialog.Alert" parent="ThemeOverlay.Material3.Dialog.Alert">
      <item name="buttonBarPositiveButtonStyle">@style/Widget.GuestKeeperPro.Button</item>
      <item name="buttonBarNegativeButtonStyle">@style/Widget.GuestKeeperPro.Button.Borderless</item>
      <item name="buttonBarNeutralButtonStyle">@style/Widget.GuestKeeperPro.Button.Borderless</item>
   </style>

   <!-- Theme for bottom sheets -->
   <style name="Theme.GuestKeeperPro.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
      <item name="android:windowIsFloating">false</item>
      <item name="android:statusBarColor">@android:color/transparent</item>
      <item name="bottomSheetStyle">@style/Widget.GuestKeeperPro.BottomSheet</item>
   </style>

   <!-- Theme for date/time pickers -->
   <style name="Theme.GuestKeeperPro.Picker" parent="ThemeOverlay.Material3.TimePicker">
      <item name="colorPrimary">@color/primary_500</item>
      <item name="colorOnPrimary">@color/white</item>
   </style>

</resources>
